---
import {
    SignedIn,
    SignedOut,
    SignInButton,
    UserButton,
} from "@clerk/astro/components";
import { ModeToggle } from "./dark-mode-toggle";
import { Sheet, SheetTrigger, SheetContent } from "@/components/ui/sheet"; // Ensure this path is correct
import { Button } from "./ui/button"; // Ensure this path is correct
import { MenuIcon } from "lucide-react";
import HeaderSheet from "./header-sheet";
---

<header
    class="sticky top-0 z-50 w-full border-b bg-white dark:border-gray-800 dark:bg-gray-950"
>
    <div
        class="container mx-auto flex h-16 max-w-6xl items-center justify-between px-4 md:px-6"
    >
        <a href="#" class="flex items-center gap-2">
            <svg
                class="h-6 w-6"
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path d="m8 3 4 8 5-5 5 15H2L8 3z"></path></svg
            >
            <h1>TCGWallet</h1>
        </a>
        <nav class="hidden items-center gap-6 text-sm font-medium md:flex">
            <a
                href="#"
                class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50"
                >Home</a
            >
            <a
                href="#"
                class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50"
                >About</a
            >
            <a
                href="#"
                class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50"
                >Services</a
            >
            <a
                href="#"
                class="text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-50"
                >Contact</a
            >
        </nav>
        <div class="flex items-center gap-4">
            <div class="hidden items-center gap-2 text-sm font-medium md:flex">
                <SignedOut>
                    <SignInButton mode="modal" />
                </SignedOut>
                <SignedIn>
                    <UserButton />
                </SignedIn>
            </div>

            <ModeToggle client:load />
            <HeaderSheet client:load />
        </div>
    </div>
</header>
